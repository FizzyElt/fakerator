{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"include": [
			"src/**/*"
		]
	},
	"formatter": {
		"indentStyle": "space",
		"include": [
			"src/**/*",
			"tsup.config.ts"
		]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}